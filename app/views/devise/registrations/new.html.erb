<div id = "blSign_up">

  <h1>Реєстрація</h1>

    <%= devise_error_messages! %>

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

    <div id = "blEmail">
      <%= f.input :email, :autofocus => true, placeholder: "Email", label: "<i id = \"icon_email\" class=\"fa fa-envelope-o fa-fw\"></i>".html_safe %>
    </div>

    <div class = "blPass">
      <%= f.input :password, placeholder: "Пароль", label: "<i class=\"fa fa-key fa-fw\"></i>".html_safe %>
    </div>

    <div class = "blPass">
      <%= f.input :password_confirmation, placeholder: "Повторіть пароль", label: "<i class=\"fa fa-key fa-fw\"></i>".html_safe %>
    </div>
    <div id = "blEmail">
      <%= f.input :name, :autofocus => true, placeholder: "Ім'я", label: "<i id = \"icon_email\" class=\"fa fa-user fa-fw\"></i>".html_safe %>
    </div>
    <div id = "blEmail">
      <%= f.input :surname, :autofocus => true, placeholder: "Прізвище", label: "<i id = \"icon_email\" class=\"fa fa-user fa-fw\"></i>".html_safe %>
    </div>
    <div id="other_links">
      <%= render "devise/shared/links" %>
    </div>

    <div id = "bl_submit">
      <%= f.button :submit, "Зареєструватись" %>
    </div>

  <% end %>

</div>